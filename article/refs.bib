	file = {Knight et al. - 2008 - Knowing But Not Doing Selecting Priority Conserva.pdf:/home/brandon/Zotero/storage/UH9MCKQM/Knight et al. - 2008 - Knowing But Not Doing Selecting Priority Conserva.pdf:application/pdf},
}


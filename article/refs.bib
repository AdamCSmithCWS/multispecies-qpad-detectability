@article{case_integrating_2017,
	title = {Integrating mechanistic and empirical model projections to assess climate impacts on tree species distributions in northwestern {North} {America}},
	volume = {23},
	issn = {1354-1013, 1365-2486},
	url = {https://onlinelibrary.wiley.com/doi/10.1111/gcb.13570},
